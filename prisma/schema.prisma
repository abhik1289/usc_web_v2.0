model Testimonials {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName  String
  photoUrl  String
  position  String
  createdBy User     @relation(fields: [userId], references: [id])
  text      String
  index     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String   @db.ObjectId
}
